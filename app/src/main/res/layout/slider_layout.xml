<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#EDF1F3 "
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:id="@+id/imgSlider"
        android:src="@drawable/cinema" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/slider_success_order"
        android:textAlignment="center"
        android:textColor="#08B74A"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/slider_description"
        android:textAlignment="center"
        android:textSize="17dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/btnSlider"
        android:layout_marginTop="20dp"
        android:background="@drawable/butten_discover"
        android:text="@string/slider_btn_discover"
        android:textSize="16dp"
        android:textColor="#f0ffffff"
        android:textStyle="bold" />

</LinearLayout>
